<div class="container">
    <div class='row'>
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>EAT DA BURGER!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class='row'>
                {{!-- create a page that loops through the data (every object such as burger name, id, and if devoured or not). post this.id and this.burger.name associates with the button  --}}
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-xs-9 text-center">
                        <pre> {{this.id}}. {{this.burger.name}} </pre>
                    </div>
                    <div class="col-cs-3 text-center">
                        {{!-- creates a button that when clicked its going to send this.id back to server. Will do so if this.devoured=true --}}
                        <form method="post" action="/burgers/update?_method=PUT"
                        class="button-size">
                        <input type="hidden" name="burger_id" type="text" value=
                        {{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">
                            DEVOUR IT!
                        </button>
                        </form>
                    </div>
                    {{/unless}}
                    {{/each}}
             </div>
             </div>
             {{!-- each burger data and if statement. if means, its checking to see if this.devoured is true. if this.devoured is true, then were going to create a button that is read only and has the id and burger name of the data were passing in --}}
             <div class="col-xs-6 text-center" class="task">
                 {{#each burger_data}}
                    {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                    {{/if}}
                    {{/each}}
             </div>
    </div>
</div>
{{!-- when we click on the submit button, itll submit the text that we entered into our routes.js.. using the data to add it to our database. --}}
<div class="container">
    <div class="row">
        <div class="col-cs-12 text-center enter_selection">
            <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control"
            value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">
                SUBMIT
            </button>
            </form>
            <p>Enter in a burger you would like to eat!</p>
        </div>
    </div>
</div>