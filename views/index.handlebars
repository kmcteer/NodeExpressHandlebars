<div class="container">
    <div class='row'>
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>EAT DA BURGER!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class='row'>
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-xs-9 text-center">
                        <pre> {{this.id}}. {{this.burger.name}} </pre>
                    </div>
                    <div class="col-cs-3 text-center">
                        <form method="post" action="/burgers/update?_method=PUT"
                        class="button-size">
                        <input type="hidden" name="burger_id" type="text" value=
                        {{this.id}}>
                        <br
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>